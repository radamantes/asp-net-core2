@model AvisoPaises.Models.Pais

@{
    ViewData["Title"] = "Index";
}

<h2>Listsa de Paises</h2>

<hr />
<form asp-controller="Paises" asp-action="Index" method="post"
      class="form-horizontal" role="form">
    <div class="row">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-xs-12">
            <label asp-for="Nome" class="control-label"></label>
            <select asp-for="Id"
                    class="form-control"
                    asp-items="@(new SelectList(ViewBag.ListaPaises, "Id","Nome"))"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            <input id="Submit1" type="submit" value="Enviar" />
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                @if (ViewBag.ValorSelecionado != null)
                {
                    <text>Pais selecionado => ID = @ViewBag.ValorSelecionado; </text>
                }
            </div>
        </div>
    </div>
</form>
